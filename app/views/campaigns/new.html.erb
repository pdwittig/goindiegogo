<div class="container-fluid">
<div class="analyze-container">
  
  <div class="row analyze-form">
    <div class="col-md-4"></div>
    <div class="col-md-4">
    <%= form_for(@campaign, remote: true) do |f| %>
    <%= f.text_field :url, placeholder: "Enter Campaign Url" %>
    <%= f.submit "Analyze", class: "button" %>
    <% end %>
    </div>
    <div class="error-msg col-md-4"></div>
  </div>
</div>
  <div class="container">  
    <div class="row chart-header">
      <div class="col-md-8">
      <h3>Campaign Analytics</h3>
      </div>
    </div>
    <%= render "chart_options" %>
    <div class="row">
    <svg class="chart"></svg>
    </div>
  </div>
</div>