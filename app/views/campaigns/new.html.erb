<div class="container-fluid container">
  <div class="analyze-form">
    <%= form_for(@campaign, remote: true) do |f| %>
    <%= f.text_field :url, placeholder: "Enter Campaign Url" %>
    <%= f.submit "Analyze", class: "button" %>
    <% end %>
  </div>
  <%= render "chart_header" %>
  <div class="row">
    <svg class="chart"></svg>
  </div>
</div>