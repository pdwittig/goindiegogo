<div class="container-fluid">
<div class="analyze-container">
  
  <div class="row analyze-form">
    <div class="col-md-4">
      <h3>
      1. Enter a Campaign  
      </h3>
    </div>
    <div class="col-md-5">
    <%= form_for(@campaign, remote: true) do |f| %>
    <%= f.text_field :url, placeholder: "Campaign Url" %>
    <%= f.submit "Analyze", class: "button" %>
    <% end %>
    </div>
    <div class="error-msg col-md-3"></div>
  </div>
</div>
  <div class="container">  
    <div class="row chart-header">
      <div class="col-md-">
      <h3>2. Check out how you stack up</h3>
      </div>
    </div>
    <%= render "chart_options" %>
    <div class="row">
    <div class="chart-example">
      <%= image_tag "chart_example.png", class: "chart-example"%>
      <h1>Enter a Campaign URL to get started!</h1>
    </div>
    <svg class="chart"></svg>
    </div>
  </div>
</div>